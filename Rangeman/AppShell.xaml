<?xml version="1.0" encoding="UTF-8"?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:e="clr-namespace:Rangeman"
             xmlns:local="clr-namespace:Rangeman"
             x:Class="Rangeman.AppShell"
             Shell.FlyoutBehavior="Disabled"
             Shell.NavBarIsVisible="False">
    <TabBar>
        <Tab Title="Main">
            <ShellContent Title="Download" ContentTemplate="{e:MyDataTemplate local:MainPage}" Route="Download" />
            <ShellContent Title="Map" ContentTemplate="{e:MyDataTemplate local:MapPage}" Route="Map" />
            <ShellContent Title="Config" ContentTemplate="{e:MyDataTemplate local:ConfigPage}" Route="Config" />
        </Tab>
    </TabBar>
</Shell>